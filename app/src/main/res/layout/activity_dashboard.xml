<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDE7A0">





    <!-- Tombol Kembali -->
    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/ic_back_circle"
        android:contentDescription="Back"
        android:scaleType="center"
        android:padding="10dp"/>

    <!-- Judul -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kuota Request"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:layout_below="@id/btnBack"
        android:textColor="#000000"/>

    <!-- Tabel Header -->
    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*"
        android:layout_margin="16dp"
        android:layout_below="@id/tvTitle"
        android:background="@android:color/white"
        android:layout_centerHorizontal="true">

        <!-- Baris Header -->
        <TableRow android:background="#ffffff">

            <TextView
                android:text="No"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="8dp"
                android:background="@drawable/cell_border" />

            <TextView
                android:text="Jenis ALBER"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="8dp"
                android:background="@drawable/cell_border" />

            <TextView
                android:text="Tanggal\nKembali"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="8dp"
                android:background="@drawable/cell_border" />

            <TextView
                android:text="Status"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="8dp"
                android:background="@drawable/cell_border" />
        </TableRow>

        <!-- Contoh baris kosong -->
        <TableRow>
            <TextView android:text="" android:padding="16dp" android:background="@drawable/cell_border"/>
            <TextView android:text="" android:padding="16dp" android:background="@drawable/cell_border"/>
            <TextView android:text="" android:padding="16dp" android:background="@drawable/cell_border"/>
            <TextView android:text="" android:padding="16dp" android:background="@drawable/cell_border"/>
        </TableRow>

    </TableLayout>


</RelativeLayout>

