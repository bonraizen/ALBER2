<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1E1E1E">

    <!-- Judul halaman -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#33B5E5"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp" />

    <!-- Kartu utama -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardKuota"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="0dp"
        app:cardUseCompatPadding="true"
        app:cardBackgroundColor="#FAE9B2"
        android:layout_margin="16dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="389dp"
            android:layout_height="795dp"
            android:padding="16dp">

            <!-- Avatar bulat -->
            <ImageView
                android:id="@+id/imgAvatar"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="#FDE5A3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Subâ€‘judul -->
            <TextView
                android:id="@+id/tvSubTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="Kuota Request"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imgAvatar" />

            <!-- Header tabel -->
            <TableLayout
                android:id="@+id/tableLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:stretchColumns="1,2,3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvSubTitle">

                <!-- Baris header -->
                <TableRow
                    android:layout_marginBottom="1dp"
                    android:background="#FFFFFF">

                    <TextView
                        style="@style/TableHeader"
                        android:text="No" />

                    <TextView
                        style="@style/TableHeader"
                        android:text="Jenis ALBER" />

                    <TextView
                        style="@style/TableHeader"
                        android:text="Tanggal\nKembali" />

                    <TextView
                        style="@style/TableHeader"
                        android:text="Status" />
                </TableRow>

                <!-- Baris konten kosong (placeholder) -->
                <TableRow
                    android:id="@+id/rowPlaceholder"
                    android:layout_height="100dp">
                    <!-- empat sel kosong -->
                    <TextView style="@style/TableCell" />

                    <TextView style="@style/TableCell" />

                    <TextView style="@style/TableCell" />

                    <TextView style="@style/TableCell" />
                </TableRow>
            </TableLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
