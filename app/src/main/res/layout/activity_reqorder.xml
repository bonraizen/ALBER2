<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDE5A3"
    tools:context=".Reqorder">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#F9E79F">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pengajuan"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/nama"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="20dp"
            android:text="Nama Lengkap"/>

        <EditText
            android:id="@+id/nama_lengkap"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:hint="Nama Lengkap"
            android:nextFocusLeft="@id/nama" />

        <EditText
            android:id="@+id/nama_perusahaan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nama Perusahaan"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/nomor_telpon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nomor Telp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/detail_alat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DETAIL ALAT"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/alat_yang_diperlukan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/alat_options"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/spesifikasi_alat"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:hint="Spesifikasi Alat"
            android:layout_marginBottom="8dp"
            android:gravity="top|start"
            android:inputType="textMultiLine" />

        <EditText
            android:id="@+id/tanggal_mulai_sewa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tanggal Mulai Sewa"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/lama_sewa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Lama Sewa"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/lokasi_proyek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Lokasi Proyek"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btn_kirim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="KIRIM"
            android:backgroundTint="#F39C12"
            android:textColor="#FFFFFF" />

    </LinearLayout>

</ScrollView>